!= flash_handler
.logindlg
  = form_for :session, :url => sessions_path, :html => {:class => 'form-horizontal' } do |f|
    .fieldset
      %legend Login
      .control-group
        %label.control-label User
        .controls
          = f.text_field :email, :class => 'input'
      .control-group
        %label.control-label Password
        .controls
          = f.password_field :password, :class => 'input'
      .control-group
        %label.control-label
        .controls
          = button_tag "Login", :class => 'btn btn-primary', 'data-disable-with' => "Processing ..."
