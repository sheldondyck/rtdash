.navbar.navbar-fixed-top
  .navbar-inner{:data => {'scollspy' => 'scollspy'}}
    .container
      %h4
        = link_to image_tag 'rtd-logo-menubar.png', :class => 'brand'
        = link_to 'Real Time Dashboard', home_url, :class => 'brand'
        %ul.nav.pull-right
          %li
            = link_to 'Sign Up', signup_url
.navbar-spacer
!= flash_handler
.logindlg.well
  = form_for :session, :url => sessions_path, :html => {:class => 'form-horizontal' } do |f|
    .fieldset
      %legend Login
      .control-group
        .controls
          = f.text_field :email, :class => 'input', :placeholder => 'Full Name'
      .control-group
        .controls
          = f.password_field :password, :class => 'input', :placeholder => 'Password'
      .control-group
        %label.control-label
        .controls
          = button_tag "Login", :class => 'btn btn-primary', 'data-disable-with' => "Processing ..."
-#= render 'pages/footer'
