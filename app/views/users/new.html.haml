= render 'pages/menu'
.container
  = form_for @user, :html => {:class => 'form-horizontal' } do |f|
    .fieldset
      %legend Sign up
      .control-group{:class => user_error_class(@user, :name)}
        %label.control-label User
        .controls
          %input.input{:name => 'user[name]', :type => 'text'}
          #span.help-inline
            = user_error_message(@user, :name)
      .control-group{:class => user_error_class(@user, :email)}
        %label.control-label Email
        .controls
          %input.input{:name => 'user[email]', :type => 'text', :class => user_error_class(@user, :email)}
          #span.help-inline
            = user_error_message(@user, :email)
      .control-group{:class => user_error_class(@user, :password)}
        %label.control Password
        .controls
          %input.input{:name => 'user[password]', :type => 'password', :class => user_error_class(@user, :password)}
          #span.help-inline
            = user_error_message(@user, :password)
      .control-group
        %label.control-label
        .controls
          = button_tag "Create", :class => 'btn btn-primary', :disable_with => "Processing ..."
