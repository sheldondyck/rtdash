= render 'pages/menu'
.container
  %h2 Sign up
  = form_for :user, :url => signup_path do |f|
    .fieldset
      -#= form_for(@user) do |f|
        .fieldset
      -#.legend
      .em
        .clearfix 
          -#.clearfix{:class => 'error'}
          %label{:for => 'xlInput'}Name:
          .input
            %input#xlInput{:name => 'name', :type => 'text'} 
            -#.input#xlInput{:class => 'error', :name => 'user', :type => 'text'} 
            -#%span.help-inline Invalid user
        .clearfix 
          -#.clearfix{:class => 'error'}
          %label{:for => 'xlInput'}Email:
          .input
            %input#xlInput{:name => 'email', :type => 'text'} 
            -#.input#xlInput{:class => 'error', :name => 'user', :type => 'text'} 
            -#%span.help-inline Invalid user
        .clearfix
          %label{:for => 'xlInput'}Password:
          .input
            %input{:type => 'password'}
        .clearfix
          .input
            = button_tag "Create", :class => 'btn primary', :disable_with => "Processing ..."
